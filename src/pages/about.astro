---
import ModernLayout from '../layouts/ModernLayout.astro';
import FadeIn from '../components/animations/FadeIn.tsx';
import AnimatedCard from '../components/animations/AnimatedCard.tsx';
import ScrollReveal from '../components/animations/ScrollReveal.tsx';
import ParallaxSection from '../components/animations/ParallaxSection.tsx';
---

<ModernLayout title="About Us - New Brunswick Church of Christ">
	<!-- Hero Section with Parallax -->
	<ParallaxSection client:load>
		<section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden">
			<div class="absolute inset-0 z-0">
				<img 
					src="https://images.unsplash.com/photo-1438232992991-995b7058bbb3?q=80&w=2873" 
					alt="Church building" 
					class="w-full h-full object-cover"
				/>
				<div class="absolute inset-0 bg-gradient-to-br from-blue-900/90 to-blue-700/80"></div>
			</div>
			<div class="relative z-10 container mx-auto px-4 text-center">
				<FadeIn client:visible>
					<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">Our Story</h1>
					<p class="text-2xl text-blue-100 max-w-3xl mx-auto">A Community of Faith Serving Since 1856</p>
				</FadeIn>
			</div>
		</section>
	</ParallaxSection>

	<!-- History Timeline Section -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-16">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">168 Years of Faith & Service</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							What began as a small gathering of believers has grown into a vibrant community 
							committed to following Jesus and serving our neighbors.
						</p>
					</div>
				</ScrollReveal>

				<div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
					<FadeIn client:visible>
						<div class="space-y-6">
							<div class="flex items-start">
								<div class="flex-shrink-0 w-24 text-primary font-bold text-lg">1856</div>
								<div>
									<h3 class="font-bold text-gray-900 mb-2">Our Beginning</h3>
									<p class="text-gray-600">The Church of God in Christ Jesus at New Brunswick was founded by a small congregation in a single room church-house in the tiny town of New Brunswick. Their vision: to establish Christ's Church according to the New Testament pattern.</p>
								</div>
							</div>
							<div class="flex items-start">
								<div class="flex-shrink-0 w-24 text-primary font-bold text-lg">Today</div>
								<div>
									<h3 class="font-bold text-gray-900 mb-2">Living Our Mission</h3>
									<p class="text-gray-600">Although the town of New Brunswick is gone, our church continues to preach the gospel and provide community support. We remain an independent, non-denominational church focused on biblical truth, authentic community, and practical faith that transforms lives.</p>
								</div>
							</div>
							<div class="mt-8 p-6 bg-blue-50 rounded-lg">
								<p class="text-lg font-semibold text-blue-900 text-center">
									"Love God • Love Others • Share Truth"
								</p>
							</div>
						</div>
					</FadeIn>
					
					<FadeIn client:visible delay={0.2}>
						<div class="relative">
							<img 
								src="https://images.unsplash.com/photo-1559027615-cd4628902d4a?q=80&w=2874" 
								alt="Church community" 
								class="rounded-lg shadow-2xl"
							/>
							<div class="absolute -bottom-8 -right-8 bg-white p-6 rounded-lg shadow-xl">
								<div class="flex items-center gap-4">
									<img src="/logos/Logo.jpg" alt="NBCC Logo" class="w-16 h-16 rounded-full object-cover" />
									<div>
										<p class="font-bold text-gray-900">Est. 1856</p>
										<p class="text-sm text-gray-600">Over 168 years of service</p>
									</div>
								</div>
							</div>
						</div>
					</FadeIn>
				</div>
			</div>
		</div>
	</section>

	<!-- Mission & Vision Section with Modern Cards -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-br from-gray-50 to-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-4">Our Mission & Vision</h2>
						<p class="text-xl text-gray-600">Guided by purpose, driven by love</p>
					</div>
				</ScrollReveal>
				
				<div class="grid md:grid-cols-2 gap-8">
					<AnimatedCard client:visible>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out h-full group">
							<div class="p-8">
								<div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
									<svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
								</div>
								<h3 class="text-2xl font-bold text-gray-900 mb-4">Our Mission</h3>
								<p class="text-gray-600 leading-relaxed">
									To love God with all our heart, soul, and mind; to love our neighbors as ourselves; 
									and to share the truth of Jesus Christ with our community and the world. We're dedicated 
									to establishing Christ's Church according to the New Testament pattern.
								</p>
							</div>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.1}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out h-full group">
							<div class="p-8">
								<div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
									<svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
									</svg>
								</div>
								<h3 class="text-2xl font-bold text-gray-900 mb-4">Our Vision</h3>
								<p class="text-gray-600 leading-relaxed">
									To be a church where people from all walks of life can encounter God, experience authentic 
									community, and be equipped to make a lasting impact for Christ in their everyday lives. 
									We welcome all who seek to know God and grow in faith.
								</p>
							</div>
						</div>
					</AnimatedCard>
				</div>
			</div>
		</div>
	</section>

	<!-- Core Values Section with Interactive Cards -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-16">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-4">Our Core Values</h2>
						<p class="text-xl text-gray-600">The principles that guide everything we do</p>
					</div>
				</ScrollReveal>
				
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
					<AnimatedCard client:visible delay={0}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out h-full hover:shadow-2xl transition-all duration-300 group">
							<div class="p-8 text-center">
								<div class="w-20 h-20 bg-gradient-to-br from-primary to-primary-dark rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
									<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Biblical Truth</h3>
								<p class="text-gray-600">We believe the Bible is God's inspired word and our guide for faith and life.</p>
							</div>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.1}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out h-full hover:shadow-2xl transition-all duration-300 group">
							<div class="p-8 text-center">
								<div class="w-20 h-20 bg-gradient-to-br from-primary to-primary-dark rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
									<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Authentic Community</h3>
								<p class="text-gray-600">We create a welcoming environment where real relationships can flourish.</p>
							</div>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.2}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out h-full hover:shadow-2xl transition-all duration-300 group">
							<div class="p-8 text-center">
								<div class="w-20 h-20 bg-gradient-to-br from-primary to-primary-dark rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
									<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Global Impact</h3>
								<p class="text-gray-600">We're committed to sharing God's love both locally and around the world.</p>
							</div>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.3}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out h-full hover:shadow-2xl transition-all duration-300 group">
							<div class="p-8 text-center">
								<div class="w-20 h-20 bg-gradient-to-br from-primary to-primary-dark rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
									<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Servant Hearts</h3>
								<p class="text-gray-600">We follow Jesus' example by serving others with love and humility.</p>
							</div>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.4}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out h-full hover:shadow-2xl transition-all duration-300 group">
							<div class="p-8 text-center">
								<div class="w-20 h-20 bg-gradient-to-br from-primary to-primary-dark rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
									<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Spirit-Led</h3>
								<p class="text-gray-600">We rely on the Holy Spirit to guide, empower, and transform our lives.</p>
							</div>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.5}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out h-full hover:shadow-2xl transition-all duration-300 group">
							<div class="p-8 text-center">
								<div class="w-20 h-20 bg-gradient-to-br from-primary to-primary-dark rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
									<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Inclusive Fellowship</h3>
								<p class="text-gray-600">No matter who you are, there's a special place for you in our church family.</p>
							</div>
						</div>
					</AnimatedCard>
				</div>
			</div>
		</div>
	</section>

	<!-- Leadership Preview -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-br from-gray-50 to-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-4">Meet Our Leadership</h2>
						<p class="text-xl text-gray-600">Dedicated servants leading with wisdom and love</p>
					</div>
				</ScrollReveal>
				
				<div class="grid md:grid-cols-3 gap-8 mb-12">
					<AnimatedCard client:visible>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out text-center p-8 h-full">
							<img 
								src="/logos/JohnClausen.jpg" 
								alt="John Clausen" 
								class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
							/>
							<h3 class="text-xl font-bold text-gray-900 mb-2">John Clausen</h3>
							<p class="text-primary font-medium mb-3">Elder & Interim Minister</p>
							<p class="text-gray-600 text-sm">Leading our congregation with wisdom and dedication during this season of transition.</p>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.1}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out text-center p-8 h-full">
							<img 
								src="/logos/BillySlater.jpg" 
								alt="Billy Slater" 
								class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
							/>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Billy Slater</h3>
							<p class="text-primary font-medium mb-3">Elder</p>
							<p class="text-gray-600 text-sm">Providing spiritual leadership and guidance while also contributing to our worship ministry.</p>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.2}>
						<div class="bg-white rounded-2xl shadow-card hover:shadow-card-hover transition-all duration-300 ease-in-out text-center p-8 h-full">
							<img 
								src="/logos/LisaSlater.jpg" 
								alt="Lisa Slater" 
								class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
							/>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Lisa Slater</h3>
							<p class="text-primary font-medium mb-3">Secretary</p>
							<p class="text-gray-600 text-sm">Managing church administration and helping coordinate activities to keep our community connected.</p>
						</div>
					</AnimatedCard>
				</div>
				
				<div class="text-center">
					<a href="/leadership" class="inline-flex items-center text-primary font-semibold hover:text-blue-700 transition-colors group">
						View all staff & leadership
						<svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- What We Believe Section -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-4">What We Believe</h2>
						<p class="text-xl text-gray-600">Our faith is rooted in timeless biblical truths</p>
					</div>
				</ScrollReveal>
				
				<FadeIn client:visible>
					<div class="prose prose-lg max-w-none text-gray-600">
						<p class="mb-6">
							At New Brunswick Church of Christ, we are an independent, non-denominational Christian Church 
							committed to Christ and His word. We believe:
						</p>
						<ul class="space-y-3">
							<li>The Bible is the inspired Word of God and our guide for faith and practice</li>
							<li>Jesus Christ is the Son of God, our Lord and Savior</li>
							<li>Salvation comes through faith in Jesus Christ, repentance, and baptism</li>
							<li>The Church is the body of Christ, called to worship, fellowship, and service</li>
							<li>Every believer is called to share the Gospel and serve others</li>
						</ul>
						<p class="mt-6">
							We welcome you to join our community and discover His power in your life. Don't hesitate to 
							contact us to find out more. We are always open to visitors and new worshippers who want to 
							come and pray among us.
						</p>
					</div>
				</FadeIn>
			</div>
		</div>
	</section>

	<!-- Call to Action -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-r from-primary to-primary-dark text-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<FadeIn client:visible>
					<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-white mb-6">More Than a Church - We're a Family</h2>
					<p class="text-xl mb-10 text-blue-100">
						Faith is meant to be lived out in community, where we support one another, 
						grow together, and serve our neighbors with Christ's love.
					</p>
				</FadeIn>
				
				<FadeIn client:visible delay={0.2}>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="/services" class="bg-white text-primary px-8 py-3 rounded-lg font-semibold transition-all duration-200 inline-block hover:bg-gray-100 hover:-translate-y-px hover:shadow-lg">
							Plan Your Visit
						</a>
						<a href="/contact" class="bg-transparent text-white px-8 py-3 rounded-lg border-2 border-white font-semibold transition-all duration-200 inline-block hover:bg-white hover:text-primary">
							Get in Touch
						</a>
					</div>
				</FadeIn>
			</div>
		</div>
	</section>
</ModernLayout>