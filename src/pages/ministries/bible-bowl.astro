---
import ModernLayout from '../../layouts/ModernLayout.astro';
import FadeIn from '../../components/animations/FadeIn.tsx';
import AnimatedCard from '../../components/animations/AnimatedCard.tsx';
import ScrollReveal from '../../components/animations/ScrollReveal.tsx';
import ParallaxSection from '../../components/animations/ParallaxSection.tsx';
---

<ModernLayout title="Bible Bowl - New Brunswick Church of Christ">
	<!-- Hero Section -->
	<ParallaxSection client:load>
		<section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden">
			<div class="absolute inset-0 z-0">
				<img 
					src="/logos/BibleBowl.jpg" 
					alt="Bible Bowl" 
					class="w-full h-full object-cover"
				/>
				<div class="absolute inset-0 bg-gradient-to-br from-green-900/90 to-green-700/80"></div>
			</div>
			<div class="relative z-10 container mx-auto px-4 text-center">
				<FadeIn client:visible>
					<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">Bible Bowl</h1>
					<p class="text-2xl text-green-100 max-w-3xl mx-auto">
						Making Scripture memory fun through competitive Bible study
					</p>
				</FadeIn>
			</div>
		</section>
	</ParallaxSection>

	<!-- Overview Section -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="grid lg:grid-cols-2 gap-12 items-center">
					<FadeIn client:visible>
						<div>
							<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Scripture Competition That Builds Faith</h2>
							<p class="text-lg text-gray-600 mb-6">
								Bible Bowl is a quick-recall scripture competition for students in grades 3-12. 
								It's an exciting way to dive deep into God's Word while building teamwork skills, 
								forming lasting friendships, and even earning college scholarships!
							</p>
							<div class="bg-green-50 rounded-lg p-6 mb-6">
								<h3 class="text-xl font-bold text-gray-900 mb-3">Season Schedule</h3>
								<div class="grid md:grid-cols-2 gap-4">
									<div>
										<p class="font-semibold text-gray-900">Fall Season</p>
										<p class="text-gray-700">September - November<br />National Tournament in December</p>
									</div>
									<div>
										<p class="font-semibold text-gray-900">Spring Season</p>
										<p class="text-gray-700">March - May<br />National Tournament in June</p>
									</div>
								</div>
							</div>
							<a href="/contact" class="inline-flex items-center text-green-600 font-semibold hover:text-green-700 transition-colors group">
								Join Bible Bowl today!
								<svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
								</svg>
							</a>
						</div>
					</FadeIn>
					
					<FadeIn client:visible delay={0.2}>
						<div class="relative">
							<img 
								src="https://images.unsplash.com/photo-1504052434569-70ad5836ab65?q=80&w=2940" 
								alt="Students studying Bible" 
								class="rounded-lg shadow-2xl"
							/>
							<div class="absolute -bottom-8 -left-8 bg-gradient-to-br from-green-600 to-green-700 text-white p-6 rounded-lg shadow-xl">
								<p class="text-3xl font-bold">20+</p>
								<p class="text-green-100">Years of Bible Bowl</p>
							</div>
						</div>
					</FadeIn>
				</div>
			</div>
		</div>
	</section>

	<!-- How It Works -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-br from-gray-50 to-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">How Bible Bowl Works</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							Teams study assigned Bible passages and compete in quiz-style tournaments
						</p>
					</div>
				</ScrollReveal>

				<div class="grid md:grid-cols-3 gap-8">
					<AnimatedCard client:visible>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300">
							<div class="p-8">
								<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center mb-6">
									<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Study Materials</h3>
								<p class="text-gray-600">
									Each season focuses on specific books of the Bible. Teams receive study guides 
									and practice questions to master the material.
								</p>
							</div>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.1}>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300">
							<div class="p-8">
								<div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mb-6">
									<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Team Practice</h3>
								<p class="text-gray-600">
									Teams meet Sunday afternoons to study together, practice quick-recall skills, 
									and prepare for tournaments.
								</p>
							</div>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.2}>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300">
							<div class="p-8">
								<div class="w-16 h-16 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-full flex items-center justify-center mb-6">
									<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-3">Competition</h3>
								<p class="text-gray-600">
									Teams compete in regional and national tournaments, answering questions in a 
									fast-paced, exciting format.
								</p>
							</div>
						</div>
					</AnimatedCard>
				</div>
			</div>
		</div>
	</section>

	<!-- Age Divisions -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Divisions for Every Age</h2>
						<p class="text-xl text-gray-600">
							We have teams for all skill levels from elementary through high school
						</p>
					</div>
				</ScrollReveal>

				<div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
					<FadeIn client:visible>
						<div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-8">
							<div class="flex items-center mb-4">
								<img 
									src="/logos/BibleBowlJR.jpg" 
									alt="Bible Bowl Junior" 
									class="w-16 h-16 rounded-lg mr-4"
								/>
								<h3 class="text-2xl font-bold text-gray-900">Junior Division</h3>
							</div>
							<p class="text-gray-700 mb-4">
								<strong>Grades 3-6</strong><br />
								Perfect for beginners! Junior teams focus on foundational Bible stories and 
								basic scripture memorization in a fun, encouraging environment.
							</p>
							<ul class="space-y-2">
								<li class="flex items-center text-gray-700">
									<svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									Age-appropriate questions
								</li>
								<li class="flex items-center text-gray-700">
									<svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									Emphasis on fun and learning
								</li>
								<li class="flex items-center text-gray-700">
									<svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									Building Bible knowledge
								</li>
							</ul>
						</div>
					</FadeIn>

					<FadeIn client:visible delay={0.1}>
						<div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-8">
							<div class="flex items-center mb-4">
								<img 
									src="/logos/BibleBowl.jpg" 
									alt="Bible Bowl Senior" 
									class="w-16 h-16 rounded-lg mr-4"
								/>
								<h3 class="text-2xl font-bold text-gray-900">Senior Division</h3>
							</div>
							<p class="text-gray-700 mb-4">
								<strong>Grades 7-12</strong><br />
								Advanced competition with deeper Bible study, faster-paced questions, and 
								opportunities for leadership and mentoring younger students.
							</p>
							<ul class="space-y-2">
								<li class="flex items-center text-gray-700">
									<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									In-depth scripture study
								</li>
								<li class="flex items-center text-gray-700">
									<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									College scholarship opportunities
								</li>
								<li class="flex items-center text-gray-700">
									<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									National tournament travel
								</li>
							</ul>
						</div>
					</FadeIn>
				</div>
			</div>
		</div>
	</section>

	<!-- Benefits Section -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-br from-gray-50 to-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Why Join Bible Bowl?</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							Bible Bowl offers benefits that last a lifetime
						</p>
					</div>
				</ScrollReveal>

				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
					<AnimatedCard client:visible>
						<div class="text-center">
							<div class="w-20 h-20 bg-gradient-to-br from-purple-400 to-purple-500 rounded-full flex items-center justify-center mx-auto mb-6">
								<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-3">Deep Bible Knowledge</h3>
							<p class="text-gray-600">
								Students gain comprehensive understanding of Scripture that serves them throughout life
							</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.1}>
						<div class="text-center">
							<div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-6">
								<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-3">College Scholarships</h3>
							<p class="text-gray-600">
								Many Christian colleges offer scholarships to Bible Bowl participants and winners
							</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.2}>
						<div class="text-center">
							<div class="w-20 h-20 bg-gradient-to-br from-green-400 to-green-500 rounded-full flex items-center justify-center mx-auto mb-6">
								<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-3">Lifelong Friendships</h3>
							<p class="text-gray-600">
								Build strong bonds with teammates and meet Christian friends from across the country
							</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.3}>
						<div class="text-center">
							<div class="w-20 h-20 bg-gradient-to-br from-orange-400 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-6">
								<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-3">Critical Thinking</h3>
							<p class="text-gray-600">
								Develop quick thinking, memorization skills, and the ability to apply Scripture
							</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.4}>
						<div class="text-center">
							<div class="w-20 h-20 bg-gradient-to-br from-red-400 to-red-500 rounded-full flex items-center justify-center mx-auto mb-6">
								<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-3">Spiritual Growth</h3>
							<p class="text-gray-600">
								Hide God's Word in your heart and strengthen your faith foundation
							</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.5}>
						<div class="text-center">
							<div class="w-20 h-20 bg-gradient-to-br from-yellow-400 to-yellow-500 rounded-full flex items-center justify-center mx-auto mb-6">
								<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-3">Fun Competition</h3>
							<p class="text-gray-600">
								Experience the thrill of competition while growing in faith and knowledge
							</p>
						</div>
					</AnimatedCard>
				</div>
			</div>
		</div>
	</section>

	<!-- Tournament Info -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Tournament Experience</h2>
						<p class="text-xl text-gray-600">
							Join us for exciting regional and national competitions
						</p>
					</div>
				</ScrollReveal>

				<FadeIn client:visible>
					<div class="bg-gradient-to-br from-green-50 to-blue-50 rounded-lg p-8 shadow-xl">
						<div class="grid md:grid-cols-2 gap-8">
							<div>
								<h3 class="text-xl font-bold text-gray-900 mb-4">Regional Tournaments</h3>
								<p class="text-gray-700 mb-4">
									Monthly competitions with teams from Indiana and surrounding states. 
									Great practice for national tournaments and building experience.
								</p>
								<ul class="space-y-2 text-gray-700">
									<li class="flex items-center">
										<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
										</svg>
										One Saturday per month
									</li>
									<li class="flex items-center">
										<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
										</svg>
										Local travel (1-2 hours)
									</li>
									<li class="flex items-center">
										<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
										</svg>
										Team bonding opportunities
									</li>
								</ul>
							</div>
							<div>
								<h3 class="text-xl font-bold text-gray-900 mb-4">National Tournaments</h3>
								<p class="text-gray-700 mb-4">
									The pinnacle of Bible Bowl competition! Teams from across the country 
									gather for an incredible weekend of competition and fellowship.
								</p>
								<ul class="space-y-2 text-gray-700">
									<li class="flex items-center">
										<svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
										</svg>
										December & June tournaments
									</li>
