---
import ModernLayout from '../layouts/ModernLayout.astro';
import FadeIn from '../components/animations/FadeIn.tsx';
import AnimatedCard from '../components/animations/AnimatedCard.tsx';
import ScrollReveal from '../components/animations/ScrollReveal.tsx';
import ParallaxSection from '../components/animations/ParallaxSection.tsx';
---

<ModernLayout title="Ministries - New Brunswick Church of Christ">
	<!-- Hero Section -->
	<ParallaxSection client:load>
		<section class="relative min-h-[50vh] flex items-center justify-center overflow-hidden">
			<div class="absolute inset-0 z-0">
				<img 
					src="https://images.unsplash.com/photo-1511632765486-a01980e01a18?q=80&w=2940" 
					alt="Hands joined together" 
					class="w-full h-full object-cover"
				/>
				<div class="absolute inset-0 bg-gradient-to-br from-blue-900/90 to-blue-700/80"></div>
			</div>
			<div class="relative z-10 container mx-auto px-4 text-center">
				<FadeIn client:visible>
					<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">Get Involved</h1>
					<p class="text-2xl text-blue-100 max-w-3xl mx-auto">
						Discover opportunities to grow in faith, build relationships, and serve others
					</p>
				</FadeIn>
			</div>
		</section>
	</ParallaxSection>

	<!-- Ministry Categories -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-16">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Ministries for Every Season of Life</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							From toddlers to seniors, we have ministries designed to help you grow in your faith journey 
							and connect with others who share your interests and life stage.
						</p>
					</div>
				</ScrollReveal>

				<!-- Children & Youth -->
				<div class="mb-20">
					<FadeIn client:visible>
						<h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">Children & Youth</h3>
					</FadeIn>
					
					<div class="grid md:grid-cols-3 gap-8">
						<AnimatedCard client:visible>
							<a href="/ministries/kids-church" class="block h-full">
								<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group overflow-hidden">
									<div class="aspect-w-16 aspect-h-9 mb-6">
										<img 
											src="/logos/VBS.jpg" 
											alt="Kids Church" 
											class="w-full h-48 object-cover rounded-t-lg group-hover:scale-105 transition-transform duration-300"
										/>
									</div>
									<div class="p-6">
										<h4 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Kids Church</h4>
										<p class="text-gray-600 mb-4">
											Ages 2 through 6th grade enjoy age-appropriate worship and biblical teaching during our Sunday service.
										</p>
										<span class="inline-flex items-center text-blue-600 font-semibold group-hover:translate-x-2 transition-transform">
											Learn more
											<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
											</svg>
										</span>
									</div>
								</div>
							</a>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.1}>
							<a href="/ministries/youth-group" class="block h-full">
								<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group overflow-hidden">
									<div class="aspect-w-16 aspect-h-9 mb-6">
										<img 
											src="/logos/Youthgroup.jpg" 
											alt="Youth Group" 
											class="w-full h-48 object-cover rounded-t-lg group-hover:scale-105 transition-transform duration-300"
										/>
									</div>
									<div class="p-6">
										<h4 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Youth Group</h4>
										<p class="text-gray-600 mb-4">
											Middle and high school students gather for worship, games, and biblical teaching Sunday evenings.
										</p>
										<span class="inline-flex items-center text-blue-600 font-semibold group-hover:translate-x-2 transition-transform">
											Learn more
											<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
											</svg>
										</span>
									</div>
								</div>
							</a>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.2}>
							<a href="/ministries/bible-bowl" class="block h-full">
								<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group overflow-hidden">
									<div class="aspect-w-16 aspect-h-9 mb-6">
										<img 
											src="/logos/BibleBowl.jpg" 
											alt="Bible Bowl" 
											class="w-full h-48 object-cover rounded-t-lg group-hover:scale-105 transition-transform duration-300"
										/>
									</div>
									<div class="p-6">
										<h4 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Bible Bowl</h4>
										<p class="text-gray-600 mb-4">
											Competitive Bible study for grades 3-12 that makes learning Scripture fun and memorable.
										</p>
										<span class="inline-flex items-center text-blue-600 font-semibold group-hover:translate-x-2 transition-transform">
											Learn more
											<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
											</svg>
										</span>
									</div>
								</div>
							</a>
						</AnimatedCard>
					</div>
				</div>

				<!-- Community & Service -->
				<div class="mb-20">
					<FadeIn client:visible>
						<h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">Community & Service</h3>
					</FadeIn>
					
					<div class="grid md:grid-cols-3 gap-8">
						<AnimatedCard client:visible>
							<a href="/ministries/food-pantry" class="block h-full">
								<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group overflow-hidden">
									<div class="aspect-w-16 aspect-h-9 mb-6 bg-gradient-to-br from-orange-400 to-orange-500 rounded-t-lg flex items-center justify-center">
										<svg class="w-24 h-24 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
										</svg>
									</div>
									<div class="p-6">
										<h4 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Food Pantry</h4>
										<p class="text-gray-600 mb-4">
											Serving families in need with groceries and essentials through our community food pantry ministry.
										</p>
										<span class="inline-flex items-center text-blue-600 font-semibold group-hover:translate-x-2 transition-transform">
											Learn more
											<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
											</svg>
										</span>
									</div>
								</div>
							</a>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.1}>
							<a href="/ministries/missions" class="block h-full">
								<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group overflow-hidden">
									<div class="aspect-w-16 aspect-h-9 mb-6 bg-gradient-to-br from-green-400 to-green-500 rounded-t-lg flex items-center justify-center">
										<svg class="w-24 h-24 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
										</svg>
									</div>
									<div class="p-6">
										<h4 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">Missions</h4>
										<p class="text-gray-600 mb-4">
											Supporting local and global missions to share God's love and the Gospel around the world.
										</p>
										<span class="inline-flex items-center text-blue-600 font-semibold group-hover:translate-x-2 transition-transform">
											Learn more
											<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
											</svg>
										</span>
									</div>
								</div>
							</a>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.2}>
							<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group overflow-hidden">
								<div class="aspect-w-16 aspect-h-9 mb-6 bg-gradient-to-br from-purple-400 to-purple-500 rounded-t-lg flex items-center justify-center">
									<svg class="w-24 h-24 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
									</svg>
								</div>
								<div class="p-6">
									<h4 class="text-2xl font-bold text-gray-900 mb-3">Small Groups</h4>
									<p class="text-gray-600 mb-4">
										Connect with others in home-based groups for Bible study, prayer, and authentic community.
									</p>
									<span class="inline-flex items-center text-gray-400 font-semibold">
										Coming Soon
									</span>
								</div>
							</div>
						</AnimatedCard>
					</div>
				</div>

				<!-- Worship & Education -->
				<div>
					<FadeIn client:visible>
						<h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">Worship & Education</h3>
					</FadeIn>
					
					<div class="grid md:grid-cols-3 gap-8">
						<AnimatedCard client:visible>
							<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group">
								<div class="p-8">
									<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
										<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
										</svg>
									</div>
									<h4 class="text-xl font-bold text-gray-900 mb-3">Worship Team</h4>
									<p class="text-gray-600 mb-4">
										Join our worship team and use your musical gifts to lead others in praising God.
									</p>
									<a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold transition-all duration-200 inline-block hover:bg-gray-100 hover:-translate-y-px hover:shadow-lg">
										Get Involved →
									</a>
								</div>
							</div>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.1}>
							<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group">
								<div class="p-8">
									<div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
										<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
										</svg>
									</div>
									<h4 class="text-xl font-bold text-gray-900 mb-3">Adult Education</h4>
									<p class="text-gray-600 mb-4">
										Deepen your faith through Sunday School classes and special Bible study series.
									</p>
									<a href="/services" class="text-blue-600 font-semibold hover:text-blue-700">
										View Schedule →
									</a>
								</div>
							</div>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.2}>
							<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full hover:shadow-2xl transition-all duration-300 group">
								<div class="p-8">
									<div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
										<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
										</svg>
									</div>
									<h4 class="text-xl font-bold text-gray-900 mb-3">Prayer Ministry</h4>
									<p class="text-gray-600 mb-4">
										Join us for Wednesday evening prayer and be part of our prayer chain ministry.
									</p>
									<a href="/prayer-request" class="text-blue-600 font-semibold hover:text-blue-700">
										Submit Prayer Request →
									</a>
								</div>
							</div>
						</AnimatedCard>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Special Programs -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-br from-gray-50 to-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Special Programs & Events</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							Throughout the year, we host special events that bring our community together
						</p>
					</div>
				</ScrollReveal>

				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
					<FadeIn client:visible>
						<div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
							<div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-4">
								<svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
								</svg>
							</div>
							<h4 class="text-lg font-bold text-gray-900 mb-2">VBS</h4>
							<p class="text-gray-600 text-sm">Annual summer Vacation Bible School with fun themes and activities</p>
						</div>
					</FadeIn>

					<FadeIn client:visible delay={0.1}>
						<div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
							<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
								<svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<h4 class="text-lg font-bold text-gray-900 mb-2">Trunk or Treat</h4>
							<p class="text-gray-600 text-sm">Safe Halloween alternative with games, candy, and family fun</p>
						</div>
					</FadeIn>

					<FadeIn client:visible delay={0.2}>
						<div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
							<div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
								<svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 00-2-2H8a2 2 0 00-2 2v2m6 0V6a2 2 0 012-2h2a2 2 0 012 2v2m-6 0h6a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4a2 2 0 012-2h6"></path>
								</svg>
							</div>
							<h4 class="text-lg font-bold text-gray-900 mb-2">Christmas Programs</h4>
							<p class="text-gray-600 text-sm">Special services and activities celebrating the birth of Christ</p>
						</div>
					</FadeIn>

					<FadeIn client:visible delay={0.3}>
						<div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
							<div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
								<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
								</svg>
							</div>
							<h4 class="text-lg font-bold text-gray-900 mb-2">Youth Retreats</h4>
							<p class="text-gray-600 text-sm">Weekend getaways for spiritual growth and fellowship</p>
						</div>
					</FadeIn>
				</div>
			</div>
		</div>
	</section>

	<!-- Call to Action -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-r from-blue-600 to-blue-700 text-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<FadeIn client:visible>
					<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-white mb-6">Find Your Place to Serve</h2>
					<p class="text-xl mb-10 text-blue-100">
						God has given you unique gifts and talents. Discover how you can use them 
						to make a difference in our church and community.
					</p>
				</FadeIn>
				
				<FadeIn client:visible delay={0.2}>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold transition-all duration-200 inline-block hover:bg-gray-100 hover:-translate-y-px hover:shadow-lg">
							Get Connected
						</a>
						<a href="/services" class="bg-transparent text-white px-8 py-3 rounded-lg border-2 border-white font-semibold transition-all duration-200 inline-block hover:bg-white hover:text-blue-600">
							Visit This Sunday
						</a>
					</div>
				</FadeIn>
			</div>
		</div>
	</section>
</ModernLayout>