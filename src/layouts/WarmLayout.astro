---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "New Brunswick Church of Christ - Where every heart finds belonging" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Friendly Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
    
    <style>
      body {
        font-family: 'Nunito', system-ui, -apple-system, sans-serif;
      }
    </style>
    
    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- Local Business Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Church",
        "name": "New Brunswick Church of Christ",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "6480 South State Road 39",
          "addressLocality": "Lebanon",
          "addressRegion": "IN",
          "addressCountry": "US"
        },
        "telephone": "765-482-5265",
        "email": "hello@nbcc-church.org",
        "url": "https://nbcc-church.org",
        "foundingDate": "1856",
        "description": "A warm, welcoming church family serving Lebanon, Indiana since 1856"
      }
    </script>
  </head>
  <body class="min-h-screen bg-warm-cream text-warm-brown">
    <!-- Warm Navigation -->
    <nav class="bg-white/80 backdrop-blur-sm shadow-warm sticky top-0 z-50">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-4">
          <!-- Logo with friendly touch -->
          <a href="/" class="flex items-center space-x-3 group">
            <div class="relative">
              <img src="/logos/Logo.jpg" alt="NBCC Logo" class="h-12 w-auto rounded-xl shadow-sm group-hover:shadow-warm transition-all" />
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-warm-coral rounded-full animate-pulse"></div>
            </div>
            <div>
              <h1 class="text-xl font-bold text-warm-brown">NBCC</h1>
              <p class="text-xs text-warm-brown/60">Come as you are</p>
            </div>
          </a>
          
          <!-- Mobile menu button -->
          <button class="md:hidden p-2 rounded-full hover:bg-warm-peach/50 transition-colors">
            <svg class="w-6 h-6 text-warm-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          
          <!-- Desktop Navigation with warm styling -->
          <div class="hidden md:flex items-center space-x-2">
            <a href="/" class="px-4 py-2 rounded-full text-warm-brown hover:bg-warm-peach/50 transition-all hover:scale-105">
              Home
            </a>
            <a href="/about" class="px-4 py-2 rounded-full text-warm-brown hover:bg-warm-peach/50 transition-all hover:scale-105">
              About
            </a>
            <a href="/services" class="px-4 py-2 rounded-full text-warm-brown hover:bg-warm-peach/50 transition-all hover:scale-105">
              Visit
            </a>
            <a href="/ministries" class="px-4 py-2 rounded-full text-warm-brown hover:bg-warm-peach/50 transition-all hover:scale-105">
              Ministries
            </a>
            <a href="/events" class="px-4 py-2 rounded-full text-warm-brown hover:bg-warm-peach/50 transition-all hover:scale-105">
              Events
            </a>
            <a href="/give" class="px-4 py-2 bg-warm-coral text-white rounded-full hover:shadow-warm transition-all hover:scale-105 font-semibold">
              Give
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Warm Footer -->
    <footer class="bg-gradient-to-br from-warm-brown to-brown-800 text-white relative overflow-hidden">
      {/* Decorative top wave */}
      <div class="absolute top-0 left-0 w-full">
        <svg viewBox="0 0 1200 120" preserveAspectRatio="none" class="h-12 fill-current text-warm-cream">
          <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"></path>
        </svg>
      </div>
      
      <div class="container mx-auto px-4 py-16 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Church Info with friendly tone -->
          <div class="col-span-1 md:col-span-2">
            <h3 class="text-2xl font-bold mb-4">
              Welcome Home to NBCC
            </h3>
            <p class="text-warm-peach mb-6 text-lg">
              Love God • Love Others • Share Truth
            </p>
            <div class="space-y-3 text-white/90">
              <p>6480 South State Road 39, Lebanon, IN 46052</p>
              <p>(765) 482-5265</p>
              <p>hello@nbcc-church.org</p>
            </div>
          </div>
          
          <!-- Service Times -->
          <div>
            <h4 class="text-xl font-bold mb-4">Join Us!</h4>
            <div class="space-y-3 text-white/90">
              <div>
                <p class="font-semibold">Sundays</p>
                <p class="text-sm">9:00 AM - Bible Study</p>
                <p class="text-sm">10:00 AM - Worship</p>
              </div>
              <div>
                <p class="font-semibold">Wednesdays</p>
                <p class="text-sm">7:00 PM - Prayer & Fellowship</p>
              </div>
            </div>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h4 class="text-xl font-bold mb-4">Stay Connected</h4>
            <div class="space-y-2">
              <a href="/prayer-request" class="block text-white/90 hover:text-warm-yellow transition-colors">
                Share a Prayer Request
              </a>
              <a href="/contact" class="block text-white/90 hover:text-warm-yellow transition-colors">
                Contact Us
              </a>
              <a href="/give" class="block text-white/90 hover:text-warm-yellow transition-colors">
                Give Online
              </a>
              <a href="/newsletter" class="block text-white/90 hover:text-warm-yellow transition-colors">
                Join Our Newsletter
              </a>
            </div>
          </div>
        </div>
        
        <!-- Bottom section -->
        <div class="mt-12 pt-8 border-t border-white/20 text-center">
          <p class="text-white/70">
            © 2024 New Brunswick Church of Christ • Serving since 1856
          </p>
          <div class="mt-4 flex justify-center space-x-4">
            <a href="#" class="text-white/70 hover:text-warm-yellow transition-colors">
              Facebook
            </a>
            <span class="text-white/40">•</span>
            <a href="#" class="text-white/70 hover:text-warm-yellow transition-colors">
              YouTube
            </a>
            <span class="text-white/40">•</span>
            <a href="#" class="text-white/70 hover:text-warm-yellow transition-colors">
              Instagram
            </a>
          </div>
        </div>
      </div>
      
      {/* Decorative elements */}
    </footer>
  </body>
</html>