---
import ModernLayout from '../layouts/ModernLayout.astro';
import ModernHero from '../components/sections/ModernHero.tsx';
import ModernServiceTimes from '../components/sections/ModernServiceTimes.tsx';
import ModernVisitorGuide from '../components/sections/ModernVisitorGuide.tsx';
import FadeIn from '../components/animations/FadeIn.tsx';
import AnimatedCard from '../components/animations/AnimatedCard.tsx';
---

<ModernLayout title="Welcome to NBCC - New Brunswick Church of Christ">
	<!-- Hero Section -->
	<ModernHero client:load />

	<!-- Service Times -->
	<ModernServiceTimes client:visible />

	<!-- About Section -->
	<section class="section-padding bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="grid lg:grid-cols-2 gap-12 items-center">
					<FadeIn client:visible>
						<div>
							<h2 class="heading-lg text-gray-900 mb-6">A Church for Real Life</h2>
							<p class="text-lg text-gray-600 mb-4">
								Since 1856, New Brunswick Church of Christ has been a cornerstone of faith in our community. 
								We're an independent, non-denominational church committed to following Jesus and serving our neighbors.
							</p>
							<p class="text-lg text-gray-600 mb-6">
								Our mission is simple: Love God, Love Others, Share Truth. We believe church should be a place 
								where you can be yourself, ask honest questions, and grow in authentic faith.
							</p>
							<div class="space-y-3">
								<div class="flex items-center">
									<svg class="w-5 h-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									<span class="text-gray-700">Contemporary worship in a casual atmosphere</span>
								</div>
								<div class="flex items-center">
									<svg class="w-5 h-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									<span class="text-gray-700">Biblical teaching relevant to everyday life</span>
								</div>
								<div class="flex items-center">
									<svg class="w-5 h-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
									<span class="text-gray-700">Programs for all ages and life stages</span>
								</div>
							</div>
							<div class="mt-8">
								<a href="/about" class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700 transition-colors group">
									Learn more about us
									<svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
									</svg>
								</a>
							</div>
						</div>
					</FadeIn>
					
					<FadeIn client:visible delay={0.2}>
						<div class="relative">
							<img 
								src="https://images.unsplash.com/photo-1559027615-cd4628902d4a?q=80&w=2874" 
								alt="Church community gathering" 
								class="rounded-lg shadow-xl"
							/>
							<div class="absolute -bottom-6 -left-6 bg-blue-600 text-white p-6 rounded-lg shadow-lg">
								<p class="text-3xl font-bold">168</p>
								<p class="text-sm">Years of Faith & Service</p>
							</div>
						</div>
					</FadeIn>
				</div>
			</div>
		</div>
	</section>

	<!-- Visitor Guide -->
	<ModernVisitorGuide client:visible />

	<!-- Ministries -->
	<section class="section-padding bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<FadeIn client:visible>
					<div class="text-center mb-12">
						<h2 class="heading-lg text-gray-900 mb-4">Get Involved</h2>
						<p class="text-xl text-gray-600 max-w-2xl mx-auto">
							From children to seniors, we have ministries designed to help you grow in faith and community.
						</p>
					</div>
				</FadeIn>
				
				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
					<AnimatedCard client:visible delay={0.1}>
						<div class="card-modern p-6 h-full">
							<img 
								src="/logos/Youthgroup.jpg" 
								alt="Youth Group" 
								class="w-16 h-16 rounded-lg mb-4 object-cover"
							/>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Youth Ministry</h3>
							<p class="text-gray-600 mb-4">Middle and high school students grow in faith through games, worship, and biblical teaching.</p>
							<a href="/ministries" class="text-blue-600 font-medium hover:text-blue-700 transition-colors">Learn more →</a>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.2}>
						<div class="card-modern p-6 h-full">
							<img 
								src="/logos/VBS.jpg" 
								alt="Children's Ministry" 
								class="w-16 h-16 rounded-lg mb-4 object-cover"
							/>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Kids Church</h3>
							<p class="text-gray-600 mb-4">Age-appropriate worship and teaching help children discover God's love in fun, engaging ways.</p>
							<a href="/ministries" class="text-blue-600 font-medium hover:text-blue-700 transition-colors">Learn more →</a>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.3}>
						<div class="card-modern p-6 h-full">
							<img 
								src="/logos/BibleBowl.jpg" 
								alt="Bible Bowl" 
								class="w-16 h-16 rounded-lg mb-4 object-cover"
							/>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Bible Bowl</h3>
							<p class="text-gray-600 mb-4">Competitive Bible study program that makes learning Scripture fun and memorable for all ages.</p>
							<a href="/ministries" class="text-blue-600 font-medium hover:text-blue-700 transition-colors">Learn more →</a>
						</div>
					</AnimatedCard>
					
					<AnimatedCard client:visible delay={0.4}>
						<div class="card-modern p-6 h-full">
							<div class="w-16 h-16 bg-gray-100 rounded-lg mb-4 flex items-center justify-center">
								<svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Small Groups</h3>
							<p class="text-gray-600 mb-4">Connect with others in home-based groups for Bible study, prayer, and authentic community.</p>
							<a href="/ministries" class="text-blue-600 font-medium hover:text-blue-700 transition-colors">Learn more →</a>
						</div>
					</AnimatedCard>
				</div>
			</div>
		</div>
	</section>

	<!-- Call to Action -->
	<section class="section-padding bg-gradient-to-br from-blue-600 to-blue-700 text-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<FadeIn client:visible>
					<h2 class="heading-lg mb-6">Ready to Take the Next Step?</h2>
					<p class="text-xl mb-10 text-blue-100">
						Whether you're exploring faith for the first time or looking for a new church home, 
						we'd love to connect with you.
					</p>
				</FadeIn>
				
				<FadeIn client:visible delay={0.2}>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="/contact" class="btn-primary bg-white text-blue-600 hover:bg-gray-100">
							Get in Touch
						</a>
						<a href="/prayer-request" class="btn-secondary border-white text-white hover:bg-white hover:text-blue-600">
							Submit a Prayer Request
						</a>
					</div>
				</FadeIn>
				
				<FadeIn client:visible delay={0.3}>
					<div class="mt-12 grid sm:grid-cols-2 gap-6 max-w-md mx-auto text-left">
						<div class="flex items-start">
							<svg class="w-6 h-6 text-blue-200 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
							</svg>
							<div>
								<p class="font-semibold">Call us</p>
								<p class="text-blue-100">(765) 482-5265</p>
							</div>
						</div>
						<div class="flex items-start">
							<svg class="w-6 h-6 text-blue-200 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
							</svg>
							<div>
								<p class="font-semibold">Email us</p>
								<p class="text-blue-100">office@nbcc-church.org</p>
							</div>
						</div>
					</div>
				</FadeIn>
			</div>
		</div>
	</section>
</ModernLayout>