---
import ModernLayout from '../layouts/ModernLayout.astro';
import FadeIn from '../components/animations/FadeIn.tsx';
import AnimatedCard from '../components/animations/AnimatedCard.tsx';
import ScrollReveal from '../components/animations/ScrollReveal.tsx';
import ParallaxSection from '../components/animations/ParallaxSection.tsx';
---

<ModernLayout title="Leadership - New Brunswick Church of Christ">
	<!-- Hero Section -->
	<ParallaxSection client:load>
		<section class="relative min-h-[50vh] flex items-center justify-center overflow-hidden">
			<div class="absolute inset-0 z-0">
				<img 
					src="https://images.unsplash.com/photo-1529070538774-1843cb3265df?q=80&w=2940" 
					alt="Church leadership" 
					class="w-full h-full object-cover"
				/>
				<div class="absolute inset-0 bg-gradient-to-br from-blue-900/90 to-blue-700/80"></div>
			</div>
			<div class="relative z-10 container mx-auto px-4 text-center">
				<FadeIn client:visible>
					<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">Our Leadership</h1>
					<p class="text-2xl text-blue-100 max-w-3xl mx-auto">
						Dedicated servants leading with wisdom, compassion, and biblical integrity
					</p>
				</FadeIn>
			</div>
		</section>
	</ParallaxSection>

	<!-- Important Notice -->
	<section class="py-12 bg-blue-50">
		<div class="container mx-auto px-4">
			<FadeIn client:visible>
				<div class="max-w-4xl mx-auto bg-white rounded-lg p-8 shadow-lg">
					<div class="flex items-start">
						<div class="flex-shrink-0 mr-4">
							<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">We're Seeking a Lead Preacher</h3>
							<p class="text-gray-700 mb-4">
								Following the passing of our beloved minister Dwight Shaffer in July, we are prayerfully 
								searching for a lead preacher to shepherd our congregation. John Clausen is faithfully 
								serving as our interim minister during this transition.
							</p>
							<a href="/contact" class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700 transition-colors">
								Learn more about this opportunity
								<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</FadeIn>
		</div>
	</section>

	<!-- Elder Leadership -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Elder Leadership</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							Our elders provide spiritual oversight and guidance, shepherding the congregation 
							according to biblical principles.
						</p>
					</div>
				</ScrollReveal>

				<div class="grid md:grid-cols-2 gap-8">
					<AnimatedCard client:visible>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 hover:shadow-2xl transition-all duration-300 h-full">
							<div class="p-8 h-full">
								<div class="flex items-start h-full">
									<img 
										src="/logos/JohnClausen.jpg" 
										alt="John Clausen" 
										class="w-24 h-24 rounded-full object-cover mr-6 flex-shrink-0"
									/>
									<div class="flex-1">
										<h3 class="text-2xl font-bold text-gray-900 mb-2">John Clausen</h3>
										<p class="text-blue-600 font-medium mb-3">Elder & Missions Director</p>
										<p class="text-gray-600">
											John has been a pillar of faith at NBCC for many years. As our missions director, 
											he brings wisdom, pastoral care, and steady leadership in coordinating our 
											local and global outreach efforts.
										</p>
									</div>
								</div>
							</div>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.1}>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 hover:shadow-2xl transition-all duration-300 h-full">
							<div class="p-8 h-full">
								<div class="flex items-start h-full">
									<div class="w-24 h-24 bg-gray-200 rounded-full mr-6 flex items-center justify-center flex-shrink-0">
										<svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
										</svg>
									</div>
									<div class="flex-1">
										<h3 class="text-2xl font-bold text-gray-900 mb-2">Dean Hagan</h3>
										<p class="text-blue-600 font-medium mb-3">Elder</p>
										<p class="text-gray-600">
											Dean serves faithfully as an elder, providing spiritual guidance and wisdom 
											to our congregation. His dedication to biblical leadership helps shepherd 
											our church family.
										</p>
									</div>
								</div>
							</div>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.2}>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 hover:shadow-2xl transition-all duration-300 h-full">
							<div class="p-8 h-full">
								<div class="flex items-start h-full">
									<img 
										src="/logos/TomMullins.jpg" 
										alt="Tom Mullins" 
										class="w-24 h-24 rounded-full object-cover mr-6 flex-shrink-0"
									/>
									<div class="flex-1">
										<h3 class="text-2xl font-bold text-gray-900 mb-2">Tom Mullins</h3>
										<p class="text-blue-600 font-medium mb-3">Elder & Interim Minister</p>
										<p class="text-gray-600">
											Tom brings years of experience and dedication to his role as elder and interim minister. 
											His commitment to biblical principles and pastoral care strengthens 
											our church leadership during this transitional time.
										</p>
									</div>
								</div>
							</div>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.3}>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 hover:shadow-2xl transition-all duration-300 h-full">
							<div class="p-8 h-full">
								<div class="flex items-start h-full">
									<img 
										src="/logos/BillySlater.jpg" 
										alt="Billy Slater" 
										class="w-24 h-24 rounded-full object-cover mr-6 flex-shrink-0"
									/>
									<div class="flex-1">
										<h3 class="text-2xl font-bold text-gray-900 mb-2">Billy Slater</h3>
										<p class="text-blue-600 font-medium mb-3">Elder</p>
										<p class="text-gray-600">
											Billy serves as an elder while also contributing to our worship ministry. 
											His dual role in leadership and worship helps bridge spiritual oversight 
											with meaningful worship experiences.
										</p>
									</div>
								</div>
							</div>
						</div>
					</AnimatedCard>
				</div>
			</div>
		</div>
	</section>

	<!-- Ministry Team -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-br from-gray-50 to-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Ministry Team</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							Our dedicated ministry team works together to create meaningful worship experiences 
							and support the spiritual growth of our congregation.
						</p>
					</div>
				</ScrollReveal>

				<!-- Worship Team -->
				<div class="mb-12">
					<h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">Worship Team</h3>
					<div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
						<FadeIn client:visible>
							<div class="bg-white rounded-lg p-8 shadow-lg text-center h-full">
								<div class="w-32 h-32 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center">
									<svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-2">Nancy Clausen</h3>
								<p class="text-blue-600 font-medium mb-3">Worship Team</p>
								<p class="text-gray-600 text-sm">
									Nancy's musical gifts and heart for worship help create an atmosphere where 
									people can connect with God through meaningful praise and worship.
								</p>
							</div>
						</FadeIn>

						<FadeIn client:visible delay={0.1}>
							<div class="bg-white rounded-lg p-8 shadow-lg text-center h-full">
								<div class="w-32 h-32 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center">
									<svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-2">Martha Scott</h3>
								<p class="text-blue-600 font-medium mb-3">Worship Team</p>
								<p class="text-gray-600 text-sm">
									Martha's dedication to worship ministry helps our congregation experience 
									meaningful moments of praise and reflection during our services.
								</p>
							</div>
						</FadeIn>
					</div>
				</div>

				<!-- Church Secretary -->
				<div>
					<h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">Church Administration</h3>
					<div class="max-w-md mx-auto">
						<FadeIn client:visible delay={0.2}>
							<div class="bg-white rounded-lg p-8 shadow-lg text-center h-full">
								<img 
									src="/logos/LisaSlater.jpg" 
									alt="Lisa Slater" 
									class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
								/>
								<h3 class="text-xl font-bold text-gray-900 mb-2">Lisa Slater</h3>
								<p class="text-blue-600 font-medium mb-3">Secretary</p>
								<p class="text-gray-600 text-sm">
									Lisa serves as our church secretary, handling administrative duties and 
									helping coordinate church activities. Her organizational skills keep 
									our church running smoothly.
								</p>
							</div>
						</FadeIn>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Our Mission -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Our Leadership Mission</h2>
					</div>
				</ScrollReveal>

				<FadeIn client:visible>
					<div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-lg p-12 text-center">
						<blockquote class="text-2xl text-gray-700 italic mb-6">
							"To establish Christ's Church according to the New Testament pattern, 
							shepherding God's people with love, wisdom, and biblical truth."
						</blockquote>
						<p class="text-gray-600">
							Our leadership is committed to serving with humility, leading by example, 
							and equipping every member to use their gifts for God's glory.
						</p>
					</div>
				</FadeIn>
			</div>
		</div>
	</section>

	<!-- Leadership Values -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-br from-gray-50 to-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Leadership Values</h2>
						<p class="text-xl text-gray-600">The principles that guide our leadership</p>
					</div>
				</ScrollReveal>

				<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
					<AnimatedCard client:visible>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full text-center p-6">
							<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-gray-900 mb-2">Biblical Authority</h3>
							<p class="text-gray-600 text-sm">
								All decisions guided by Scripture
							</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.1}>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full text-center p-6">
							<div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-gray-900 mb-2">Servant Leadership</h3>
							<p class="text-gray-600 text-sm">
								Leading by serving others first
							</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.2}>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full text-center p-6">
							<div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-gray-900 mb-2">Integrity</h3>
							<p class="text-gray-600 text-sm">
								Living with transparency and honesty
							</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.3}>
						<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 h-full text-center p-6">
							<div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-gray-900 mb-2">Unity</h3>
							<p class="text-gray-600 text-sm">
								Working together in love and purpose
							</p>
						</div>
					</AnimatedCard>
				</div>
			</div>
		</div>
	</section>

	<!-- Call to Action -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-r from-blue-600 to-blue-700 text-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<FadeIn client:visible>
					<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-white mb-6">Partner With Us</h2>
					<p class="text-xl mb-10 text-blue-100">
						Our leadership team is here to serve you. Whether you need pastoral care, have questions 
						about faith, or want to get involved in ministry, we're here to help.
					</p>
				</FadeIn>
				
				<FadeIn client:visible delay={0.2}>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold transition-all duration-200 inline-block hover:bg-gray-100 hover:-translate-y-px hover:shadow-lg">
							Contact Our Leaders
						</a>
						<a href="/prayer-request" class="bg-transparent text-white px-8 py-3 rounded-lg border-2 border-white font-semibold transition-all duration-200 inline-block hover:bg-white hover:text-blue-600">
							Submit a Prayer Request
						</a>
					</div>
				</FadeIn>
			</div>
		</div>
	</section>
</ModernLayout>