---
import ModernLayout from '../layouts/ModernLayout.astro';
import FadeIn from '../components/animations/FadeIn.tsx';
import AnimatedCard from '../components/animations/AnimatedCard.tsx';
import ScrollReveal from '../components/animations/ScrollReveal.tsx';
import ContactForm from '../components/ui/ContactForm.tsx';
---

<ModernLayout title="Contact Us - New Brunswick Church of Christ">
	<!-- Hero Section -->
	<section class="relative bg-gradient-to-br from-blue-900 to-blue-700 text-white py-20">
		<div class="absolute inset-0 overflow-hidden">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-600 rounded-full opacity-20"></div>
			<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-800 rounded-full opacity-20"></div>
		</div>
		<div class="relative container mx-auto px-4 text-center">
			<FadeIn client:visible>
				<h1 class="text-5xl md:text-6xl font-bold mb-6">Get in Touch</h1>
				<p class="text-2xl text-blue-100 max-w-3xl mx-auto">
					We'd love to hear from you and help you connect with our church family
				</p>
			</FadeIn>
		</div>
	</section>

	<!-- Contact Information -->
	<section class="py-12 md:py-16 lg:py-20 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<div class="grid lg:grid-cols-2 gap-12">
					<!-- Contact Cards -->
					<div class="space-y-6">
						<ScrollReveal client:visible>
							<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-8">Connect With Us</h2>
						</ScrollReveal>

						<AnimatedCard client:visible>
							<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 p-8 hover:shadow-2xl transition-all duration-300">
								<div class="flex items-start">
									<div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
										</svg>
									</div>
									<div class="ml-4">
										<h3 class="text-xl font-bold text-gray-900 mb-2">Visit Us</h3>
										<p class="text-gray-600 mb-3">
											6480 S State Road 39<br />
											Lebanon, IN 46052
										</p>
										<a 
											href="https://maps.google.com/?q=6480+S+State+Road+39+Lebanon+IN+46052" 
											target="_blank" 
											rel="noopener noreferrer"
											class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700 transition-colors group"
										>
											Get Directions
											<svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
											</svg>
										</a>
									</div>
								</div>
							</div>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.1}>
							<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 p-8 hover:shadow-2xl transition-all duration-300">
								<div class="flex items-start">
									<div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-lg flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
										</svg>
									</div>
									<div class="ml-4">
										<h3 class="text-xl font-bold text-gray-900 mb-2">Call Us</h3>
										<p class="text-gray-600 mb-3">
											Phone: (765) 482-5265
										</p>
										<p class="text-sm text-gray-500">
											Office Hours: Monday-Thursday, 9 AM - 3 PM
										</p>
									</div>
								</div>
							</div>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.2}>
							<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 p-8 hover:shadow-2xl transition-all duration-300">
								<div class="flex items-start">
									<div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
										</svg>
									</div>
									<div class="ml-4">
										<h3 class="text-xl font-bold text-gray-900 mb-2">Email Us</h3>
										<a 
											href="mailto:office@nbcc-church.org"
											class="text-blue-600 font-semibold hover:text-blue-700 transition-colors"
										>
											office@nbcc-church.org
										</a>
										<p class="text-sm text-gray-500 mt-2">
											We'll respond within 1-2 business days
										</p>
									</div>
								</div>
							</div>
						</AnimatedCard>

						<AnimatedCard client:visible delay={0.3}>
							<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 p-8 hover:shadow-2xl transition-all duration-300">
								<div class="flex items-start">
									<div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center flex-shrink-0">
										<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										</svg>
									</div>
									<div class="ml-4">
										<h3 class="text-xl font-bold text-gray-900 mb-2">Service Times</h3>
										<div class="space-y-2 text-gray-600">
											<p><strong>Sunday School:</strong> 9:00 AM</p>
											<p><strong>Sunday Worship:</strong> 10:00 AM</p>
											<p><strong>Wednesday Prayer:</strong> 7:00 PM</p>
										</div>
									</div>
								</div>
							</div>
						</AnimatedCard>
					</div>

					<!-- Contact Form -->
					<div>
						<ScrollReveal client:visible delay={0.2}>
							<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-8">Send Us a Message</h2>
						</ScrollReveal>
						
						<FadeIn client:visible delay={0.3}>
							<ContactForm client:load />
						</FadeIn>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Map Section -->
	<section class="py-12 md:py-16 lg:py-20 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<ScrollReveal client:visible>
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-gray-900 mb-6">Find Us</h2>
						<p class="text-xl text-gray-600">
							Located just off State Road 39, south of Lebanon
						</p>
					</div>
				</ScrollReveal>

				<FadeIn client:visible>
					<div class="bg-white rounded-2xl shadow-card transition-all duration-300 ease-in-out hover:shadow-card-hover hover:-translate-y-0.5 p-2 shadow-2xl">
						<div class="aspect-w-16 aspect-h-9 bg-gray-200 rounded-lg overflow-hidden">
							<iframe
								src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3068.0!2d-86.4!3d40.0!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDDCsDA0JzAwLjAiTiA4NsKwMjQnMDAuMCJX!5e0!3m2!1sen!2sus!4v1234567890"
								width="100%"
								height="450"
								style="border:0;"
								allowfullscreen=""
								loading="lazy"
								referrerpolicy="no-referrer-when-downgrade"
								class="w-full h-full"
							></iframe>
						</div>
					</div>
				</FadeIn>

				<div class="mt-12 grid md:grid-cols-3 gap-8">
					<AnimatedCard client:visible>
						<div class="text-center">
							<div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Accessible Building</h3>
							<p class="text-gray-600">Wheelchair accessible with convenient parking</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.1}>
						<div class="text-center">
							<div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Ample Parking</h3>
							<p class="text-gray-600">Free parking with spaces close to the entrance</p>
						</div>
					</AnimatedCard>

					<AnimatedCard client:visible delay={0.2}>
						<div class="text-center">
							<div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
								</svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900 mb-2">Welcome Center</h3>
							<p class="text-gray-600">Friendly greeters ready to help you find your way</p>
						</div>
					</AnimatedCard>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-12 md:py-16 lg:py-20 bg-gradient-to-r from-blue-600 to-blue-700 text-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<FadeIn client:visible>
					<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight text-white mb-6">Have Questions?</h2>
					<p class="text-xl mb-10 text-blue-100">
						Whether you're planning your first visit or looking to get more involved, 
						we're here to help. Don't hesitate to reach out!
					</p>
				</FadeIn>
				
				<FadeIn client:visible delay={0.2}>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="/services" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold transition-all duration-200 inline-block hover:bg-gray-100 hover:-translate-y-px hover:shadow-lg">
							Plan Your Visit
						</a>
						<a href="/prayer-request" class="bg-transparent text-white px-8 py-3 rounded-lg border-2 border-white font-semibold transition-all duration-200 inline-block hover:bg-white hover:text-blue-600">
							Submit a Prayer Request
						</a>
					</div>
				</FadeIn>
			</div>
		</div>
	</section>
</ModernLayout>